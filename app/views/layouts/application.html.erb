<!DOCTYPE html>
<html lang="en">
  <%= render 'layouts/header' %>
<body>
  <div class="main-container">
      <%= render 'layouts/nav' %>
      <div id="main">
        <% flash.each do |message_type, message| %>
          <%= content_tag(:div,message,class:"alert alert-#{message_type}") %>
        <% end %>
        <%= yield %>
      </div>
      <%= render 'layouts/footer' %>
      <!--<%= debug(params) if Rails.env.development? %>-->
  </div>
</body>
</html>

