<div class="row">
  <div class="col-lg-8 mx-auto text-center center jumbotron">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>

      <%= f.password_field :password, class: 'form-control',placeholder: "Password" %>

      <%= f.submit "Log in", class: "butts" %>
    <% end %>

    <p>Not a parrandero yet? <%= link_to "Sign up for parranda", users_new_path %></p>
  </div>
</div>